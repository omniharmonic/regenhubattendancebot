{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "env": { "es2022": true, "node": true },
  "ignorePatterns": ["dist", "coverage", "node_modules"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off"
  }
}

